<UserControl
    x:Class="wpf_authentication_authorization.Controls.LoadingScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:wpf_authentication_authorization.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Visibility="Hidden">
        <Grid
            Grid.Row="1"
            Background="White"
            Opacity="0.5" />

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="laodingText" Text="@">
                <TextBlock.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="64" />
                        <Setter Property="ItemsControl.AllowDrop" Value="True" />
                    </Style>
                </TextBlock.Resources>
            </TextBlock>
        </Grid>
    </Grid>

</UserControl>
